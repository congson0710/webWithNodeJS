{{#section 'title'}}Trang chủ{{/section}} {{#section 'headTitle'}}Bán chạy nhất{{/section}}


<!-- body -->
<div class="container" style="margin-bottom: 20px">
    <div class="row">
        {{#each prod}}
        <div class="col-md-3">
            <form class="flagForm" action="" method="post">
                <input type="hidden" value="{{ProdID}}" name="ProdID" class="valueProdID">
            </form>
            <div class="img-thumbnail">
                <img src="{{ProdImage}}" height="250" width="230" data-prodid="" class="ProdImage">
                <div class="caption">
                    <p class="h5 prodName">{{ProdName}}</p>
                    <p class="prodPrice"> {{ProdPrice}} </p>
                    <p>
                        <button class="btn btn-primary btnAddCart">Thêm vào giỏ hàng</button>
                    </p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>


{{#section 'js'}}
<script>
    $(".btnAddCart").click(function () {
        const parent = $(this).parents('.col-md-3');
        const ProdID = parent.find(".valueProdID").val();
        console.log("id", ProdID)
        const myStorage = window.localStorage;
        var product = {
            ProdID: ProdID
        }

        //myStorage.clear();
        myStorage.setItem("storageName", "temp-cart ");
        myStorage.setItem("product", JSON.stringify(product));
        console.log("storage: ", myStorage);
    });
</script> {{/section}}