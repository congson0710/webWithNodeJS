<!-- user info -->
<div class="container" style="margin-top: 30px; margin-bottom: 30px">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="row">
                    <div class="card-body col-md-4" align="center">
                        <img src="{{user.UserImage}}" style="witdh: 300px; height: 300px">
                    </div>
                    <div class="card-body col-md-8">
                        <div class="form-group">
                            <label for="username">Username:</label>
                            <input type="text" value="{{user.UserName}}" class="form-control" id="inputUserName">
                        </div>
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="text" value="{{user.Email}}" class="form-control" id="inputUserName">
                        </div>
                        <div class="form-group">
                            <label for="address">Address:</label>
                            <input type="text" value="{{user.UserID}}" class="form-control" id="inputUserName">
                        </div>
                        <div class="form-group" align="right">
                            <button class="btn btn-success">Cập nhật</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>