{{#section 'headTitle'}}Đổi mật khẩu{{/section}} {{#section 'title'}}Cá nhân{{/section}}

<!-- user info -->
<div class="container" style="margin-top: 30px; margin-bottom: 30px">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="row">
                    <div class="card-body col-md-4" align="center">
                        <img src="{{user.UserImage}}" style="witdh: 300px; height: 300px">
                    </div>
                    <div class="card-body col-md-8">
                        <form action="" method="post" id="formPassword">
                            <div class="form-group" id="form1">
                                <label for="pass">Mật khẩu:</label>
                                <input type="password" class="form-control" id="enPass">
                            </div>
                            <div class="form-group" id="form2">
                                <label for="reenpass">Nhập lại mật khẩu:</label>
                                <input type="password" class="form-control" id="reEnPass">
                            </div>
                            <div class="form-group" id="form3">
                                <label for="newpass" id="newPass">Mật khẩu mới:</label>
                                <input type="password" class="form-control" name="NewUserPassword">
                            </div>
                        </form>
                        <button class="btn btn-success" id="confirmChange">Cập nhật</button>
                        <a class="btn btn-success" href="/">Hủy</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{#section 'js'}}
<script>
    $(document).ready(function () {
        $("#confirmChange").click(function () {
            var curPass = $("#enPass").val();
            var reEnCurPass = $("#reEnPass").val();
            if (curPass === reEnCurPass && curPass !== "" && reEnCurPass !== "") {
                $("#formPassword").submit();
                $("#form3").append('<a class="btn btn-success">Đổi mật khẩu thành công</a>');
            }
        })
    })
</script> {{/section}}