{{#section 'title'}}Đăng nhập{{/section}} {{#section 'headTitle'}}Đăng nhập{{/section}}

<!-- body -->
<div class="container" style="margin-top: 50px; margin-bottom: 50px">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form class="card" action="" method="post">
                <div class="card-header">
                    <div class="form-group">
                        <label for="username">Tên đăng nhập</label>
                        <input type="text" placeholder="Nhập tài khoản!" class="form-control" id="inputUserName" name="UserName">
                    </div>
                    <div class="form-group">
                        <label for="password">Mật khẩu</label>
                        <input type="password" placeholder="Nhập mật khẩu!" class="form-control" id="inputPassword" name="UserPassword">
                    </div>
                    <br>
                    <div class="col-lg-12" align="center">

                        <button class="btn btn-danger" type="submit">Đăng nhập</button>

                        <a class="btn btn-danger" href="/signup">Đăng ký</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>